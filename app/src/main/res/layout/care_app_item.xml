<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/AppInfo"
                android:layout_marginTop="6dp"
                android:background="@drawable/dialog"
                android:layout_width="match_parent"
                android:layout_height="88dp">

    <!--<com.gavin.yjq.counts.buttons.CircleImageView-->
    <!--android:layout_marginLeft="12dp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:id="@+id/head"-->
    <!--android:layout_width="64dp"-->
    <!--android:layout_height="64dp"/>-->
    <ImageView
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/head"
            android:layout_width="64dp"
            android:layout_height="64dp"/>

    <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/head"
            android:layout_alignTop="@+id/head"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.gavin.yjq.counts.buttons.StarsView
            android:layout_toRightOf="@+id/head"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/name"
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_toLeftOf="@+id/follow"
            android:id="@+id/comments"
            android:maxLines="2"
            android:textSize="8sp"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@+id/head"
            android:layout_toRightOf="@+id/head"
            android:layout_below="@+id/stars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/stars"
            android:layout_below="@+id/name"
            android:layout_marginLeft="4dp"
            android:layout_alignBottom="@+id/stars"
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_alignTop="@+id/stars"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/color6"
            android:id="@+id/follow"
            android:layout_width="88dp"
            android:layout_height="wrap_content"/>

</RelativeLayout>
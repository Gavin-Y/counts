<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/AppInfo"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/dialog"
        android:layout_width="match_parent"
        android:layout_height="152dp">

    <!--<com.gavin.yjq.counts.buttons.CircleImageView-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:id="@+id/head"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp"/>-->
    <ImageView
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/head"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/head"
            android:layout_alignTop="@+id/head"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:ellipsize="end"
            android:layout_toRightOf="@+id/head"
            android:layout_below="@+id/name"
            android:layout_marginLeft="12dp"
            android:id="@+id/EName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>

    <TextView
            android:ellipsize="end"
            android:layout_toRightOf="@+id/head"
            android:layout_below="@+id/EName"
            android:layout_marginLeft="12dp"
            android:id="@+id/AName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>

    <com.gavin.yjq.counts.buttons.StarsView
            android:layout_toRightOf="@+id/head"
            android:layout_below="@+id/AName"
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/stars"
            android:layout_below="@+id/AName"
            android:layout_marginLeft="4dp"
            android:layout_alignBottom="@+id/stars"
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_toRightOf="@+id/num"
            android:layout_below="@+id/AName"
            android:layout_marginLeft="4dp"
            android:id="@+id/upDown"
            android:layout_width="20dp"
            android:layout_height="25dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"
            android:id="@+id/changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/changeI"
                android:layout_width="15dp"
                android:layout_height="15dp"/>

    </LinearLayout>



</RelativeLayout>
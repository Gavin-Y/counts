<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gavin.yjq.counts">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <supports-screens
            android:smallScreens="true"
            android:normalScreens="true"
            android:largeScreens="true"
            android:resizeable="true"
            android:anyDensity="true" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_logo"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".activities.TestActivity_"
                android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.sec.SearchActivity_"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <service android:name=".services.TestService"/>

        <activity android:name=".activities.LoginActivity"
                android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activities.UserInfoActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activities.RegActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activities.sec.AppListActivity_"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activities.sec.ChangeUserHead_"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activities.sec.ContentListActivity_"
                  android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".activities.sec.CareAppList_"
                  android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>